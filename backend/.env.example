# Project
PROJECT_NAME=CodeWave
VERSION=0.1.0
API_V1_STR=/api/v1
DEBUG=false

# Application
APP_NAME=CodeWave
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0
APP_BASE_URL=http://localhost:8000
APP_SECRET_KEY=your-secret-key-here

# Security
SECRET_KEY=your-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database
DB_DRIVER=sqlite
DB_PATH=./data/codewave.db
DB_ECHO=true

# API
API_V1_PREFIX=/api/v1
API_TITLE=CodeWave API
API_DESCRIPTION=CodeWave backend API
API_VERSION=0.1.0
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=codewave-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60 